#include <stdio.h>  // Link section 
void main()
 {
      // Declare variables 
   int fact, fact1, fact2,n,c,r,p,i;
      // Get values from the user
   printf("Enter the values for n \t and r ");
   scanf("%d%d",&n, &r); 
   for(i=1;i<=n; i++)
      fact*=i ; 
   for(i=1;i<=(n-r); i++)
      fact1*=i; 
      p=fact/fact1;
      for(i=1;i<=r; i++)
      fact*=i;
     c=fact*(fact1*fact2);
     printf("\n%dp%d=%d",n, r, p); 
     printf("\n%dc%d=%d",n, r, c); 
 }
