        printf("Enter base,side1 and side2 of a triangle:);
        scanf("%d %d %d",&base,&side1,&side2);
        perm1=2*3.14*radius;
        perm2=2*(length+breadth);
        perm3= base+side1+side2;
        printf("Perimeter of circle is %d",perm1);
        printf("Perimeter of rectangle is %d",perm2);
        printf("Perimeter of triangle is %d",perm4);
      }
