#include<stdio.h>     // Link section 
void main()
      {
          // Declare variables 
        int radius,length,breadth,base,side1,side2,perm1,perm2,perm3;
          // Get values from the user 
        printf("Enter radius");
        scanf("%d",&radius);
        printf("Enter length and breadth ");
